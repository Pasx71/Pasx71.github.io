source "https://rubygems.org"

gem "jekyll", "~> 3.9" # Use a version compatible with GitHub Pages

# GitHub Pages dependency bundle
# If you have unexpected problems building Jekyll sites locally,
# remove the `group :jekyll_plugins` line and, optionally, the gems
# listed underneath it.
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.15"
  gem "jekyll-seo-tag", "~> 2.7"
  gem "jekyll-remote-theme", "~> 0.4.3" # Needed for remote_theme
  # Add other GH-Pages supported plugins here if needed
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
